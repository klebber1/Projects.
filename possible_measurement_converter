#include <stdio.h>
#include <stdlib.h>

int main() {
    /*  measurement converter
           project*/

    int opt=10;
    do {

        printf("measurement converter project.\n\n");
        printf("Choose the measurement type to convert:\n\n");
        printf("1-Lenght\n");
        printf("2-Mass\n");
        printf("3-Pressure\n");
        printf("4-Temperature\n");
        printf("5-Velocity\n");
        printf("6-Frequency\n");
        printf("enter the number corresponding to one of the options above: ");
        scanf("%d", &opt);
        printf("\n");

        if (opt >= 7 || opt <= 0 ) {
            printf("Wrong value. Choose a value from 1 to 5 to continue: ");

        }
    }while (opt >= 7 || opt <= 0);


            switch (opt) {
                case 1:
                    printf("1=Lenght");
                    printf("\n");
                    system("pause");
                    break;
                case 2:
                    printf("2=Mass");
                    printf("\n");
                    system("pause");
                    break;
                case 3:
                    printf("3=Pressure");
                    printf("\n");
                    system("pause");
                    break;
                case 4:
                    printf("4=Temperature");
                    printf("\n");
                    system("pause");
                    break;
                case 5:
                    printf("5=Velocity");
                    printf("\n");
                    system("pause");
                    break;
                case 6:
                    printf("6=Frequency");
                    printf("\n");
                    system("pause");
                    break;    



        }


    return 0;
}
