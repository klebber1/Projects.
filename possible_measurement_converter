#include <stdio.h>

int main() {
    /*  measurement converter
           project*/

    int opt=10;
    do {

        printf("measurement converter project.\n\n");
        printf("Choose the measurement type to convert:\n\n");
        printf("0-Lenght\n");
        printf("1-Mass\n");
        printf("2-Pressure\n");
        printf("3-Temperature\n");
        printf("4-Velocity\n");
        printf("enter the number corresponding to one of the options above: ");
        scanf("%d", &opt);
        printf("\n");

        if (opt >= 5 ) {
            printf("Wrong value. Choose a value from 1 to 5 to continue: ");

        }
    }while (opt >= 5);


            switch (opt) {
                case 0:
                    printf("0=Lenght");
                    break;
                case 1:
                    printf("1=Mass");
                    break;
                case 2:
                    printf("2=Pressure");
                    break;
                case 3:
                    printf("3=Temperature");
                    break;
                case 4:
                    printf("4=Velocity");
                    break;



        }


    return 0;
}


